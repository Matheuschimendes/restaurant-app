datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Defina a URL de conexão no arquivo .env
}

generator client {
  provider = "prisma-client-js"
}

model Produto {
  id          Int     @id @default(autoincrement())
  nomeProduto String
  preco       Float
  tipo        String // "espeto", "sobremesa", "acompanhamento", etc.
  descricao   String? // Descrição do produto (campo opcional)
  imagemUrl   String? // URL da imagem do produto
  itens       Item[]
}

model Pedido {
  id        Int      @id @default(autoincrement())
  mesa      String
  total     Float
  status    String   @default("pendente") // Status do pedido
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  itens     Item[]
}

model Item {
  id         Int     @id @default(autoincrement())
  quantidade Int     @default(1) // Quantidade do item no pedido
  produto    Produto @relation(fields: [produtoId], references: [id])
  produtoId  Int
  pedido     Pedido? @relation(fields: [pedidoId], references: [id], onDelete: Cascade)
  pedidoId   Int?
}
